<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
	<managed-bean>
		<managed-bean-name>localeSettings</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanLocaleSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanUser</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>trips</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanTrips</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanLogin</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>signup</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanSignup</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>trip</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanTrip</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/pages/error.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{trips.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/listaViajes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/pages/listaViajes.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{trips.cancelarPlaza(entry.id)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/listaViajes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{trips.solicitarPlaza(entry.id)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/listaViajes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>solicitudes</from-outcome>
			<to-view-id>/pages/solicitudes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>modificarViaje</from-outcome>
			<to-view-id>/pages/modificarViaje.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{trips.cancelarViaje(entry.id)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/listaViajes.xthml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/pages/login.xthml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>signUp</from-outcome>
			<to-view-id>/pages/signUp.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>registrarViaje</from-outcome>
			<to-view-id>/pages/registrarViaje.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{user.closeSession}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/listaViajes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/pages/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{login.validar}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/listaViajes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/pages/signUp.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{signup.register}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/listaViajes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/pages/modificarViaje.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{trip.modificar}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/listaViajes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/pages/registrarViaje.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{trip.registrar}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/listaViajes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/pages/solicitudes.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{trip.confirmarPasajero(entry.id)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/solicitudes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{trip.excluirPasajero(entry.id)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/pages/solicitudes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
